@model List<Entity.Model.ProductCategory>

<div class="h_menu container-fluid">
    <a id="touch-menu" class="mobile-menu" href="#">Menu</a>
    <nav>
        <ul class="menu list-unstyled">
           @foreach(var i in Model)
           {
               var url = "/sanpham/" + i.MetaTitle + "-" + i.ID;
               <li><a href="@url">@i.Name</a></li>
           }
            <div class="clear"> </div>
        </ul>
    </nav>
    <script src="/Source/Client/js/menu.js" type="text/javascript"></script>
</div>
<div class="h_menu container-fluid scrollMenu" >
    <a id="touch-menu" class="mobile-menu" href="#">Menu</a>
    <nav>
        <ul class="menu list-unstyled menu_scroll">
            @foreach (var i in Model)
            {
                var url = "/sanpham/" + i.MetaTitle + "-" + i.ID;
                <li><a href="@url">@i.Name</a></li>
            }
            <div class="clear"> </div>
        </ul>
    </nav>
    <script src="/Source/Client/js/menu.js" type="text/javascript"></script>
</div>

<style>
    .scrollMenu {
        background: url(https://cdn1.vienthonga.vn/image/2017/12/5/100000_top.png) 0 0 no-repeat scroll;
        display: none;
        box-shadow: 0px 2px 2px rgba(0,0,0,0.5); /*Đổ bóng cho menu*/
        position: fixed; /*Cho menu cố định 1 vị trí với top và left*/
        top: 0; /*Nằm trên cùng*/
        left: 0; /*Nằm sát bên trái*/
        z-index: 100000; /*Hiển thị lớp trên cùng*/
        width: 100%;
    }
    .menu_scroll{
        opacity : 0.5;
        border-radius:10px;
    }
</style>